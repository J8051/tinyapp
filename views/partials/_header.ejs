<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>    
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <!-- if a userid is present show a logout button -->
    <% if(userId){ %> 
     Signed in as: <%=userId%>
     <form action="/logout" method="post" >
     <button type="submit">Log Out</button>
      </form>
    <% } else { %>  
      <!-- if theres no userid present go to the register page -->
     <div>
      <form action="/register" method="get" >
        <button type="submit">Register</button>
         </form>
     </div> 
<!-- if theres no userid present and you have an account got to log in page -->
        <div>
          <form action="/login" method="get" >
            <button type="submit">Log in</button>
          </form>

        </div>

   <% } %>

  </nav>
 
</header>